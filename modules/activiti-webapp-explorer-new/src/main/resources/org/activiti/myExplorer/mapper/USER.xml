<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.activiti.myExplorer.mapper.UserMapper">
	<cache />

	<select id="selectForAssociation" resultMap="result" useCache="false">
		flying#{?}(smartDataSource:activiti_test):select
	</select>

	<select id="select" resultMap="result">
		flying#{?}:select
	</select>

	<select id="selectAll" resultMap="result">
		flying:selectAll
	</select>

	<select id="selectOne" resultMap="result">
		flying:selectOne
	</select>

	<select id="count" resultType="int">
		flying:count
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		flying:insert
		<selectKey keyProperty="id" resultType="String" order="BEFORE">
			select replace(${sql.uuid}, '-', '')
		</selectKey>
	</insert>

	<update id="update">
		flying:update
	</update>

	<update id="updatePersistent">
		flying:updatePersistent
	</update>

	<delete id="delete">
		flying:delete
	</delete>

	<resultMap id="result" type="User" autoMapping="true">
		<id property="id" column="ID" />
		<result property="name" column="NAME" />
		<result property="avatar" column="AVATAR" />
		<result property="userid" column="USERID" />
		<result property="notifyCount" column="NOTIFYCOUNT" />
	</resultMap>
</mapper>